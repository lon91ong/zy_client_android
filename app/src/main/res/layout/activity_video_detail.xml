<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210"
        android:background="@color/black">

        <FrameLayout
            android:id="@id/playerWebContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <FrameLayout
            android:id="@id/playerContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivWebPlay"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_web_play" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivDownload"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_film_download" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivCollect"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/sel_collect_bg" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <View style="@style/DivideLine" />

    <com.zy.client.views.loader.LoaderLayout
        android:id="@id/statusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_45">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/color_font_black"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/font_15"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintHorizontal_weight="0.7"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/llAnthology"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="大内密探" />

                    <LinearLayout
                        android:id="@+id/llAnthology"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="top|end"
                        android:maxWidth="@dimen/dp_50"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp_3"
                        android:paddingEnd="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="0.3"
                        app:layout_constraintLeft_toRightOf="@id/tvName"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvName">

                        <TextView
                            android:id="@+id/tvCurPlayName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:gravity="top|end"
                            android:maxWidth="@dimen/dp_200"
                            android:focusableInTouchMode="true"
                            android:textColor="@color/color_font_gray"
                            android:textSize="@dimen/font_14"
                            tools:text="大内密探" />

                        <ImageView
                            android:id="@+id/ivPlayMore"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="top|end"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_arrow_right"
                            android:visibility="invisible" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvDirector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text="导演"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/font_15"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvActor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text="演员"
                    android:textColor="@color/color_font_gray"
                    android:textSize="@dimen/font_13"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="@color/color_font_gray"
                    android:textSize="@dimen/font_13"
                    android:visibility="gone"
                    tools:text="语言"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="@color/color_font_gray"
                    android:textSize="@dimen/font_13"
                    android:visibility="gone"
                    tools:text="影片类型"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="@color/color_font_gray"
                    android:textSize="@dimen/font_13"
                    android:visibility="gone"
                    tools:text="上映时间"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="剧情简介"
                    android:textColor="@color/color_font_black"
                    android:textSize="@dimen/font_15"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/color_font_gray"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/font_14"
                    tools:text="大内密探大内密探大内密探大内密探大内密探大内密探大内密探大内密探大内密探大内密探大内密探大内密探大内密探" />

            </LinearLayout>
        </ScrollView>

    </com.zy.client.views.loader.LoaderLayout>
</LinearLayout>